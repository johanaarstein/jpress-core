{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "strict": true,
    "target": "ES2021",
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}
